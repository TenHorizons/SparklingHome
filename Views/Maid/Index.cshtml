@model SparklingHome.Models.Maid

@{
    ViewData["Title"] = "Index";
}

@if (TempData["successMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["successMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container text-center mb-3">
    <div class="row align-items-center">
        <div class="col">
            <h1>Maid Administration</h1>
        </div>
        <div class="col">
            <button type="button" class="btn btn-primary mr-auto d-block" data-toggle="modal" data-target="#exampleModal">
                Add Maid Details
            </button>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Maid ID</th>
            <th scope="col">Full name</th>
            <th scope="col">Registration date</th>
            <th scope="col">Availability</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var maid in (List<Maid>)ViewBag.maidList)
        {
            <tr>
                <th scope="row">@maid.MaidId</th>
                <td>@maid.FullName</td>
                <td>@maid.RegistrationDate</td>
                <td>@maid.IsAvailable</td>
                <td>
                    <a class="btn btn-info" asp-action="MaidDetailsPage" asp-controller="Maid" asp-route-maidId="@maid.MaidId">Update</a>
                    <button type="button" class="btn btn-danger open-delete-maid-modal" data-id="@maid.MaidId" data-toggle="modal" data-target="#deleteMaidModal">Delete</button>
                </td>
            </tr>
        }

    </tbody>
</table>

<nav aria-label="Page navigation example" class="mt-3">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form class="modal-content" method="post" asp-action="addNewEmployee" asp-controller="Maid">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label for="employeeName">Full name</label>
                    <input id="employeeName" asp-for="FullName" class="form-control" placeholder="Provide the employee's full name as per written on their birth certificate" required name="FullName">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="employeeGender">Gender</label>
                    <input class="form-control" asp-for="Gender" id="Employee Gender" placeholder="eg. male" required name="Gender">
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="employeeContactNo">Contact Number</label>
                    <input class="form-control" id="employeeContactNo" asp-for="ContactNo" name="ContactNo" required>
                    <span asp-validation-for="ContactNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="employeeSalary">Salary</label>
                    <input class="form-control" id="employeeSalary" asp-for="Salary" placeholder="Salary in RM" required name="Salary">
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="empRegistrationDate">RegistrationDate</label>
                    <input class="form-control" id="empRegistrationDate" asp-for="RegistrationDate" name="RegistrationDate">
                    <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="employeeWorkingExp">Working Experience</label>
                    <input class="form-control" id="employeeWorkingExp" asp-for="WorkingExperienceInYears" placeholder="Working experience in years" name="WorkingExperienceInYears">
                    <span asp-validation-for="WorkingExperienceInYears" class="text-danger"></span>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Add record</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="deleteMaidModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Maid Record?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="delete-maid-modal-text-content">Placeholder text</p>
            </div>
            <form class="modal-footer" id="deleteMaidRecordForm" asp-action="DeleteMaidRecord" asp-controller="Maid">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Yes, I'm sure</button>
            </form>
        </div>
    </div>
</div>

<script src="~/js/maid_crud.js"></script>