@using Microsoft.AspNetCore.Identity
@using SparklingHome.Areas.Identity.Data
@using Amazon.SQS.Model

@inject SignInManager<SparklingHomeUser> SignInManager
@inject UserManager<SparklingHomeUser> UserManager

@{
    var user = UserManager.GetUserAsync(User).Result;
}

<ul class="navbar-nav navbar-collapse">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>

        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>

        </li>

        if (user.UserType == "Admin")
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Maid" asp-action="Index">Manage Employees</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Promotion" asp-action="AdminBroadcast">Send Newsletter</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Promotion" asp-action="CustomerSubscription">Newsletter</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Reservation" asp-action="Index">Cleaning Service</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="Index">Articles</a>
        </li>
        <li class="nav-item ml-lg-auto dropdown">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-bell"></i> <span class="badge badge-light">4</span>
            </button>
            <div class="dropdown-menu" id="sqsMessageList">

                @if (ViewBag.messages != null)
                {
                    foreach (var message in (List<Message>)ViewBag.messages)
                    {
                        <div>@message.Body</div>
                    }
                }

            </div>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>

    }
</ul>
